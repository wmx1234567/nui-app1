/* 颜色变量 */
/*文本基本颜色*/
.list {
  width: 100%;
  border: 1px solid rgba(119, 119, 119, 0.1);
  padding: 10rpx;
  border-radius: 10rpx;
}
.list img {
  width: 100%;
  height: 152rpx;
  border-radius: 10rpx;
}
.list h6 {
  white-space: normal;
}
.list p:nth-child(3) {
  font-size: 20rpx;
  margin-top: 10rpx;
}
.list p:nth-child(3) img {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.list p:nth-child(4) {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
}
.list p:nth-child(4) span:nth-child(1) {
  color: #fb885d;
}
.list p:nth-child(4) img {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.scroll-view_H {
  white-space: nowrap;
  width: 96%;
  margin: 0 auto;
}
.scroll-view-item {
  font-size: 36rpx;
}
.scroll-view-item_H {
  display: inline-block;
  width: 40%;
  font-size: 36rpx;
  margin: 0 15rpx;
}
scroll-view ::-webkit-scrollbar {
  /* 下面四个属性，选一个就可 */
  display: none;
  width: 0;
  height: 0;
  background-color: transparent;
}
.list-box {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  align-items: center;
  margin-top: 50rpx;
}
.list-box p:nth-child(1) span {
  margin-left: 10rpx;
}
.list-box p:nth-child(2) {
  color: #959da5;
  font-size: 30rpx;
}
.list-box p:nth-child(2) img {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.list-box .word.data-v-5ce5cfbe {
  font-size: 9px;
  background-image: linear-gradient(90deg, #fb6932, #fa140e);
  color: #fff;
  padding: 0 4px;
  border-radius: 14px 14px 14px 0;
}