/* 颜色变量 */
/*文本基本颜色*/
.history {
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.history .a {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.history .a span:nth-child(2) {
  color: #ccc;
}
.history ul {
  display: flex;
  list-style: none;
  flex-wrap: wrap;
  margin: 0;
  padding: 0;
  justify-content: space-between;
}
.history ul li {
  border: 1px solid #ccc;
  padding: 10rpx 10rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.hot {
  width: 90%;
  margin: 0 auto;
}
.hot p {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.hot ul {
  display: flex;
  list-style: none;
  flex-wrap: wrap;
  margin: 0;
  padding: 0;
  justify-content: space-between;
}
.hot ul li {
  border: 1px solid #ccc;
  padding: 10rpx 10rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.header {
  display: flex;
  height: 100rpx;
  align-items: center;
}
.header img {
  width: 52rpx;
  height: 52rpx;
  margin: 0 10rpx;
}
.header view {
  flex: 1;
  position: relative;
}
.header view img {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 6rpx;
  top: 26rpx;
}
.header view input {
  width: 80%;
  background-color: rgba(204, 204, 204, 0.336);
  padding: 10rpx 50rpx 10rpx 70rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: inline-block;
  margin-top: 14rpx;
}
.header span {
  margin: 0 10rpx;
}