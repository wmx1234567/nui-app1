/* 颜色变量 */
/*文本基本颜色*/
.two1 {
  border: 0 !important;
}
.two {
  width: 100%;
  border-bottom: 20rpx solid rgba(204, 204, 204, 0.3);
}
.two ul li {
  display: flex;
  justify-content: space-between;
  border-bottom: rgba(204, 204, 204, 0.6) 2rpx solid;
  padding: 20rpx 40rpx;
}
.two ul li img:nth-child(1) {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}
.two ul li img:nth-child(2) {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.header {
  width: 100%;
  height: 150rpx;
  background-color: #345dc2;
}
.content {
  width: 100%;
  border-radius: 30rpx 30rpx 0 0;
  margin-top: -50rpx;
  background-color: #fff;
}
.content .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  border-bottom: 20rpx solid rgba(204, 204, 204, 0.3);
}
.content .top .left {
  width: 45%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .top .left img {
  width: 150rpx;
  height: 150rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.content .top .right {
  width: 10%;
}
.content .top .right img {
  width: 40rpx;
  height: 40rpx;
}
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}